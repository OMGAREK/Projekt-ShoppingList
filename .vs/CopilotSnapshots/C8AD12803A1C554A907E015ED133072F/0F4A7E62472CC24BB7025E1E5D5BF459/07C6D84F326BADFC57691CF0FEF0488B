using ShoppingListAW4E.Models;
using System.Collections.ObjectModel;
using System.Text.Json;
using System.Linq;
using System.IO;

namespace ShoppingListAW4E.ViewModels
{
    // Ten plik to serce logiki aplikacji (ViewModel).
    // Bardzo szczegółowe wyjaśnienie dla osoby, która nie zna programowania:
    // - Aplikacja składa się z dwóch głównych części: "Widok" (co widzisz na ekranie)
    // oraz "ViewModel" (logika i dane). Ten plik to właśnie ViewModel.
    // - ViewModel przechowuje dwie listy:
    // * Categories - lista kategorii (np. "Owoce", "Warzywa")
    // * Products - lista wszystkich produktów
    // - Gdy użytkownik wykona akcję w interfejsie (np. kliknie przycisk), strona
    // wywołuje odpowiednią metodę z tego pliku. Metoda zaktualizuje listy oraz
    // zapisze zmiany na dysku. Dzięki mechanizmowi powiadamiania widoku, ekran
    // od razu pokaże zaktualizowane dane.
    public class ShoppingListViewModel
    {
        // Nazwy plików używane do zapisu danych na urządzeniu. To są zwykłe pliki tekstowe
        // w formacie JSON. JSON to czytelny format do przechowywania tabelkowych danych.
        const string ProductFile = "products.json";
        const string CategoryFile = "categories.json";

        // Lista kategorii pokazana w aplikacji. ObservableCollection to specjalna lista,
        // która informuje interfejs gdy elementy zostaną dodane lub usunięte.
        public ObservableCollection<Category> Categories { get; set; }
        // Lista wszystkich produktów.
        public ObservableCollection<Product> Products { get; set; }

        // Poniższe pola są powiązane z polami formularza w UI (Entry, Picker itd.).
        // Użytkownik wpisuje tutaj wartości, a metody ViewModelu odczytują je podczas
        // dodawania kategorii lub produktu.
        public string NewCategoryName { get; set; }
        public string NewProductName { get; set; }
        public string NewProductUnit { get; set; }
        public int NewProductQuantity { get; set; } =1;

        // Ta właściwość przechowuje aktualnie wybraną kategorię w polu wyboru (Picker).
        public Category SelectedCategory { get; set; }

        // Konstruktor uruchamiany przy tworzeniu ViewModelu.
        // Kroki jakie wykonuje:
        //1. Wczytuje zapisane kategorie i produkty z plików (jeśli istnieją).
        //2. Ustawia, żeby kategorie były zwinięte (IsExpanded = false) - dzięki temu
        // lista produktów nie jest rozwinięta zaraz po starcie.
        //3. Jeśli nie ma żadnych kategorii (np. pierwsze uruchomienie), tworzy
        // cztery przykładowe kategorie i zapisuje je.
        //4. Rozdziela produkty do odpowiednich kategorii, aby UI mogło je wyświetlić.
        public ShoppingListViewModel()
        {
            Categories = LoadCategories();
            Products = LoadProducts();

            // Zapewniamy, że po starcie żadna kategoria nie będzie rozwinięta.
            foreach (Category cat in Categories)
            {
                cat.IsExpanded = false;
            }

            // Jeśli użytkownik jeszcze nie dodał kategorii, tworzymy kilka przykładowych
            // aby interfejs nie był pusty i żeby program był od razu użyteczny.
            if (Categories.Count ==0)
            {
                Categories.Add(new Category("Warzywa") { IsExpanded = false });
                Categories.Add(new Category("Owoce") { IsExpanded = false });
                Categories.Add(new Category("Nabiał") { IsExpanded = false });
                Categories.Add(new Category("Chemia") { IsExpanded = false });
                SaveCategories();
            }

            // Umieszczamy istniejące produkty w odpowiadających im kategoriach.
            LoadProductsIntoCategories();
        }

        // Metoda odpowiedzialna za przełączanie stanu kategorii (zwinięta/rozwinięta).
        // Wyjaśnienie:
        // - Gdy użytkownik kliknie nazwę kategorii, wywoływana jest ta metoda.
        // - Metoda ustawia właściwość IsExpanded na przeciwną do obecnej.
        public void ToggleCategory(Category category)
        {
            if (category == null)
                return;

            category.IsExpanded = !category.IsExpanded;
        }

        // Dodawanie nowej kategorii.
        // Krok po kroku:
        //1. Sprawdzamy, czy użytkownik wpisał jakąś nazwę (nie dodajemy pustych nazw).
        //2. Tworzymy nowy obiekt Category i dodajemy go do listy Categories.
        //3. Czyścimy pole tekstowe (ustawiamy NewCategoryName na pusty ciąg), aby
        // użytkownik wiedział, że kategoria została dodana.
        //4. Zapisujemy zmiany do pliku (SaveCategories).
        public void AddCategory()
        {
            if (string.IsNullOrWhiteSpace(NewCategoryName))
                return;

            Categories.Add(new Category(NewCategoryName) { IsExpanded = false });
            NewCategoryName = string.Empty;
            SaveCategories();
        }

        // Usuwanie kategorii:
        //1. Usuwamy wszystkie produkty, które mają przypisaną tę kategorię (z listy Products).
        //2. Usuwamy samą kategorię z listy Categories.
        //3. Zapisujemy obie listy na dysku.
        public void RemoveCategory(Category category)
        {
            if (category == null)
                return;

            for (int i = Products.Count -1; i >=0; i--)
            {
                if (Products[i].CategoryName == category.Name)
                    Products.RemoveAt(i);
            }

            Categories.Remove(category);
            SaveProducts();
            SaveCategories();
        }

        // Dodawanie produktu:
        // - Weryfikujemy pola formularza (nazwa musi być niepusta, jednostka też).
        // - Pobieramy wybraną kategorię (SelectedCategory) i przypisujemy ją produktowi.
        // - Dodajemy produkt do listy Products i do listy produktów w odpowiedniej kategorii.
        // - Zapisujemy listę produktów.
        public void AddProduct()
        {
            if (string.IsNullOrWhiteSpace(NewProductName))
                return;

            if (string.IsNullOrWhiteSpace(NewProductUnit))
                return;

            if (SelectedCategory == null)
                return;

            Product product = new Product
            {
                Name = NewProductName,
                Unit = NewProductUnit,
                Quantity = NewProductQuantity,
                CategoryName = SelectedCategory.Name
            };

            Products.Add(product);
            Category cat = Categories.FirstOrDefault(c => c.Name == product.CategoryName);
            cat?.Products.Add(product);

            SaveProducts();
        }

        // Usuwanie pojedynczego produktu:
        // - Produkt usuwany jest z listy ogólnej i z listy kategorii, do której należał.
        public void RemoveProduct(Product product)
        {
            if (product == null)
                return;

            Products.Remove(product);

            foreach (Category cat in Categories)
            {
                if (cat.Products.Contains(product))
                {
                    cat.Products.Remove(product);
                    break;
                }
            }

            SaveProducts();
        }

        // Oznaczanie produktu jako kupionego/odznaczanie:
        // - Metoda zmienia flagę IsBought w obiekcie Product.
        // - Następnie aktualizuje kolejność na liście: kupione produkty przenosimy
        // na koniec listy, aby miały oddzielne miejsce.
        // - Robimy to zarówno w liście ogólnej Products, jak i w liście Products
        // wewnątrz danej kategorii.
        // - Na końcu zapisujemy zmiany.
        public void ToggleBought(Product product)
        {
            if (product == null)
                return;

            product.IsBought = !product.IsBought;

            Products.Remove(product);

            if (product.IsBought)
            {
                Products.Add(product);
            }
            else
            {
                int index =0;
                while (index < Products.Count && !Products[index].IsBought)
                    index++;
                Products.Insert(index, product);
            }

            Category category = Categories.FirstOrDefault(c => c.Name == product.CategoryName);
            if (category != null)
            {
                category.Products.Remove(product);
                if (product.IsBought)
                    category.Products.Add(product);
                else
                {
                    int catIndex =0;
                    while (catIndex < category.Products.Count && !category.Products[catIndex].IsBought)
                        catIndex++;
                    category.Products.Insert(catIndex, product);
                }
            }

            SaveProducts();
        }

        // Wczytywanie produktów do odpowiadających im kategorii.
        // Wyjaśnienie: produkty przechowujemy w jednej tablicy Products, lecz każdy
        // widok kategorii chce mieć swoją listę produktów. Ta metoda przypisuje
        // obiekty Product do właściwej kategorii na podstawie nazwy kategorii.
        void LoadProductsIntoCategories()
        {
            foreach (Product product in Products)
            {
                Category category = Categories.FirstOrDefault(c => c.Name == product.CategoryName);
                category?.Products.Add(product);
            }
        }

        // Wczytywanie danych z pliku JSON. Jeśli plik nie istnieje, zwracamy pustą listę.
        ObservableCollection<Product> LoadProducts()
        {
            string path = Path.Combine(FileSystem.AppDataDirectory, ProductFile);
            if (!File.Exists(path))
                return new ObservableCollection<Product>();

            return JsonSerializer.Deserialize<ObservableCollection<Product>>(File.ReadAllText(path))
                ?? new ObservableCollection<Product>();
        }

        // Wczytywanie kategorii z pliku JSON. Jeśli plik nie istnieje, zwracamy pustą listę.
        ObservableCollection<Category> LoadCategories()
        {
            string path = Path.Combine(FileSystem.AppDataDirectory, CategoryFile);
            if (!File.Exists(path))
                return new ObservableCollection<Category>();

            return JsonSerializer.Deserialize<ObservableCollection<Category>>(File.ReadAllText(path))
                ?? new ObservableCollection<Category>();
        }

        // Zapis wszystkich produktów do pliku. JSON to po prostu format tekstowy,
        // który pozwala zapisać dane w uporządkowany sposób.
        public void SaveProducts()
        {
            string path = Path.Combine(FileSystem.AppDataDirectory, ProductFile);
            File.WriteAllText(path, JsonSerializer.Serialize(Products, new JsonSerializerOptions { WriteIndented = true }));
        }

        // Zapis wszystkich kategorii do pliku.
        void SaveCategories()
        {
            string path = Path.Combine(FileSystem.AppDataDirectory, CategoryFile);
            File.WriteAllText(path, JsonSerializer.Serialize(Categories, new JsonSerializerOptions { WriteIndented = true }));
        }
    }
}
