using ShoppingListAW4E.Models;
using System.Collections.ObjectModel;
using System.Text.Json;
using System.Linq;
using System.IO;

namespace ShoppingListAW4E.ViewModels
{
    // Ten plik zawiera klasę 'ShoppingListViewModel':
    // - 'ViewModel' to część programu, która łączy dane (listy kategorii i produktów)
    //   z interfejsem użytkownika (stroną). Dba o to, żeby to co widzisz na ekranie
    //   odpowiadało aktualnym danym i zapisuje je na dysku.
    // - Używamy struktur, które automatycznie informują interfejs, gdy coś się zmieni
    //   ("ObservableCollection"). Dzięki temu, gdy dodasz np. nowy produkt, ekran
    //   od razu pokaże go automatycznie.
    public class ShoppingListViewModel
    {
        // Nazwy plików, w których przechowujemy dane (w pamięci aplikacji).
        const string ProductFile = "products.json";
        const string CategoryFile = "categories.json";

        // Lista kategorii widoczna w aplikacji.
        public ObservableCollection<Category> Categories { get; set; }
        // Lista wszystkich produktów widoczna w aplikacji.
        public ObservableCollection<Product> Products { get; set; }

        // Pola powiązane z formularzami na stronie (tekst, ilość itp.).
        public string NewCategoryName { get; set; }

        public string NewProductName { get; set; }
        public string NewProductUnit { get; set; }
        public int NewProductQuantity { get; set; } = 1;

        // Wybrana kategoria w pickerze (przy dodawaniu produktu).
        public Category SelectedCategory { get; set; }

        // Konstruktor - wykonuje się gdy aplikacja uruchamia widok.
        // Wczytuje zapisane dane i przygotowuje listy.
        public ShoppingListViewModel()
        {
            Categories = LoadCategories();
            Products = LoadProducts();

            // Upewniamy się, że kategorie nie będą rozwinięte po starcie programu.
            foreach (Category cat in Categories)
            {
                cat.IsExpanded = false;
            }

            // Jeśli nie ma zapisanych kategorii, tworzymy kilka przykładowych.
            if (Categories.Count == 0)
            {
                Categories.Add(new Category("Warzywa") { IsExpanded = false });
                Categories.Add(new Category("Owoce") { IsExpanded = false });
                Categories.Add(new Category("Nabiał") { IsExpanded = false });
                Categories.Add(new Category("Chemia") { IsExpanded = false });
                SaveCategories();
            }

            // Umieszczamy produkty w odpowiadających im kategoriach, żeby widok mógł je pokazać.
            LoadProductsIntoCategories();
        }

        // Funkcja wywoływana po kliknięciu nazwy kategorii - przełącza stan (zwinięta/rozwinięta).
        public void ToggleCategory(Category category)
        {
            if (category == null)
                return;

            category.IsExpanded = !category.IsExpanded;
        }

        // Dodaje nową kategorię (jeśli w polu wpisano nazwę).
        public void AddCategory()
        {
            if (string.IsNullOrWhiteSpace(NewCategoryName))
                return;

            Categories.Add(new Category(NewCategoryName) { IsExpanded = false });
            NewCategoryName = string.Empty;
            SaveCategories();
        }

        // Usuwa kategorię i wszystkie produkty do niej przypisane.
        public void RemoveCategory(Category category)
        {
            if (category == null)
                return;

            for (int i = Products.Count - 1; i >= 0; i--)
            {
                if (Products[i].CategoryName == category.Name)
                    Products.RemoveAt(i);
            }

            Categories.Remove(category);
            SaveProducts();
            SaveCategories();
        }

        // Dodaje produkt do wybranej kategorii.
        // Sprawdza proste warunki (czy nazwa i jednostka nie są puste oraz czy wybrano kategorię).
        public void AddProduct()
        {
            if (string.IsNullOrWhiteSpace(NewProductName))
                return;

            if (string.IsNullOrWhiteSpace(NewProductUnit))
                return;

            if (SelectedCategory == null)
                return;

            Product product = new Product
            {
                Name = NewProductName,
                Unit = NewProductUnit,
                Quantity = NewProductQuantity,
                CategoryName = SelectedCategory.Name
            };

            // Dodajemy produkt do listy wszystkich produktów oraz do listy danej kategorii.
            Products.Add(product);
            Category cat = Categories.FirstOrDefault(c => c.Name == product.CategoryName);
            cat?.Products.Add(product);

            SaveProducts();
        }

        // Usuwa pojedynczy produkt z listy oraz z kategorii.
        public void RemoveProduct(Product product)
        {
            if (product == null)
                return;

            Products.Remove(product);

            foreach (Category cat in Categories)
            {
                if (cat.Products.Contains(product))
                {
                    cat.Products.Remove(product);
                    break;
                }
            }

            SaveProducts();
        }

        // Oznacza produkt jako kupiony/niekupiony i przenosi go na koniec listy kupionych.
        // Dzięki temu kupione produkty nie mieszają się z pozostałymi.
        public void ToggleBought(Product product)
        {
            if (product == null)
                return;

            product.IsBought = !product.IsBought;

            // Najpierw usuwamy produkt z listy ogólnej, potem wstawiamy na odpowiednią pozycję.
            Products.Remove(product);

            if (product.IsBought)
            {
                Products.Add(product);
            }
            else
            {
                int index = 0;
                while (index < Products.Count && !Products[index].IsBought)
                    index++;
                Products.Insert(index, product);
            }

            // Analogicznie aktualizujemy listę wewnątrz kategorii.
            Category category = Categories.FirstOrDefault(c => c.Name == product.CategoryName);
            if (category != null)
            {
                category.Products.Remove(product);
                if (product.IsBought)
                    category.Products.Add(product);
                else
                {
                    int catIndex = 0;
                    while (catIndex < category.Products.Count && !category.Products[catIndex].IsBought)
                        catIndex++;
                    category.Products.Insert(catIndex, product);
                }
            }

            SaveProducts();
        }

        // Wczytuje produkty do odpowiednich kategorii po starcie aplikacji.
        void LoadProductsIntoCategories()
        {
            foreach (Product product in Products)
            {
                Category category = Categories.FirstOrDefault(c => c.Name == product.CategoryName);
                category?.Products.Add(product);
            }
        }

        // Wczytuje listę produktów z pliku (jeśli istnieje).
        ObservableCollection<Product> LoadProducts()
        {
            string path = Path.Combine(FileSystem.AppDataDirectory, ProductFile);
            if (!File.Exists(path))
                return new ObservableCollection<Product>();

            return JsonSerializer.Deserialize<ObservableCollection<Product>>(File.ReadAllText(path))
                ?? new ObservableCollection<Product>();
        }

        // Wczytuje listę kategorii z pliku (jeśli istnieje).
        ObservableCollection<Category> LoadCategories()
        {
            string path = Path.Combine(FileSystem.AppDataDirectory, CategoryFile);
            if (!File.Exists(path))
                return new ObservableCollection<Category>();

            return JsonSerializer.Deserialize<ObservableCollection<Category>>(File.ReadAllText(path))
                ?? new ObservableCollection<Category>();
        }

        // Zapisuje wszystkie produkty do pliku.
        public void SaveProducts()
        {
            string path = Path.Combine(FileSystem.AppDataDirectory, ProductFile);
            File.WriteAllText(path, JsonSerializer.Serialize(Products, new JsonSerializerOptions { WriteIndented = true }));
        }

        // Zapisuje wszystkie kategorie do pliku.
        void SaveCategories()
        {
            string path = Path.Combine(FileSystem.AppDataDirectory, CategoryFile);
            File.WriteAllText(path, JsonSerializer.Serialize(Categories, new JsonSerializerOptions { WriteIndented = true }));
        }
    }
}
