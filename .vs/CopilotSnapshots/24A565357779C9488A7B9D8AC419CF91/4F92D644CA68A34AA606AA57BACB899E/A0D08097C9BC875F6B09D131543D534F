    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ShoppingListAW4E.Views"
    x:Class="ShoppingListAW4E.AppShell">

    <TabBar>
        <ShellContent
        Title="Lista zakupów"
        ContentTemplate="{DataTemplate views:ShoppingListPage}" />
    </TabBar>

</Shell>
